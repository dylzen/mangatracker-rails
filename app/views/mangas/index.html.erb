
<div class="table-responsive">
  <table class="table table-light table-striped table-hover align-middle">
    <thead class="thead-dark">
      <tr class="text-center">
        <th>title</th>
        <th>released</th>
        <th>owned</th>
        <th>missing</th>
        <th>status</th>
        <th>collection</th>
        <th colspan="2"></th>
      </tr>
      </thead>

      <tbody>
        <% @mangas.each do |manga| %>
          <tr class="text-center">
            <td style="width:20%"> <%= manga.title %> </td>
            <td> <%= manga.pub_vols %> </td>
            <td> <%= (manga.volumes.collect { |v| v.number }).sort.join(', ') %> </td>
            <td> <%= ( ((1..manga.pub_vols).to_a) - (manga.volumes.collect { |v| v.number } )).sort.join(', ') %> </td>
            <td> <%= manga.status %> </td>
            <td> <%= manga.collection %> </td>
            <td> <%= link_to "view", manga, class:"btn btn-dark btn-sm" %>
          </tr>
        <% end %>
      </tbody>
  </table>
  <%= @owned_vols %>
</div>