<p style="color: green"><%= notice %></p>
<div class="container">
  <%= button_to 'scrape', scrape_releases_path %>
  <div class="table-responsive">
    <table class="table table-light table-striped table-hover align-middle">
      <thead class="thead-dark">
        <tr class="text-center">
          <th colspan="3">date</th>
          <th>title</th>
          <th>book</th>
          <th>link</th>
          <th>picture</th>
          <th>editor</th>
        </tr>
      </thead>
      <tbody>
        <% @releases.each do |release| %>
          <tr class="text-center">
            <td colspan="3"><%= release.day %>&nbsp;<%= release.date %>&nbsp;<%= release.month %> </td>
            <td><%= release.title %></td>
            <td><%= release.book %> </td>
            <td><%= release.link %> </td>
            <td><%= release.picture %> </td>
            <td><%= release.editor %> </td>
            <td><%= link_to "show", release %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "new release", new_release_path %>
  </div>
</div>
